#include <iostream>

// Constructors
// Constructors must have the same name of its class
// It must be public


class Something
{
private:
    int m_number{};

public:
    Something(int a)          // This is a constructor.
        :m_number{ a }        // This is a member initialize list
    {
                              // I could add something here, but I prefered to make Something just to initialize the value of m_number
    }

    void print()              // Now this function is working with m_number.
    {
        std::cout << m_number;
    }

};


int main()
{
    Something foo(4);
    foo.print();

    return 0;
}
