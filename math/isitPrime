#include <iostream>
// More than two dividers = prime


int main()
{
    int div {};

    std::cout << "Input the number here: ";
    int num {};
    std::cin >> num;
if (num > 1)
{


    for (int i = 1; i <= num/2; i++)    
    {
        num / i;

        if (num % i == 0)
        {
            div ++;
        }
    }
    if (div > 2)
    {
        std::cout << "The number isn't prime";

    } else
    {
        std::cout << "The number is prime";
    }
} else
{
    std::cout << "Please, input a number bigger than 1";
}
    return 0;
}
